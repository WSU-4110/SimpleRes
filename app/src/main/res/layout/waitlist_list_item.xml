<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/nameofWaitparty"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Here"
        android:layout_alignBottom="@+id/Here"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/timeofWaitlist"
        android:layout_toRightOf="@id/timeofWaitlist"
        android:textColor="@color/color1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeofWaitlist"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/Here"
        android:layout_alignBottom="@+id/Here"
        android:layout_marginBottom="11dp"
        android:ems="3"
        android:textColor="@color/color1" />

    <TextView
        android:id="@+id/sizeofWaitparty"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/Here"
        android:layout_alignBottom="@+id/Here"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/nameofWaitparty"
        android:ems="2"
        android:textColor="@color/color1" />

    <Button
        android:id="@+id/Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-7dp"
        android:layout_marginRight="-2dp"
        android:text="Here" />


</RelativeLayout>