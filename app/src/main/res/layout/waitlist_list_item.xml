<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/nameofWaitparty"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Here"
        android:layout_alignBottom="@+id/Here"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/timeofWaitlist"
        android:layout_toRightOf="@id/timeofWaitlist"
        android:textColor="@color/color1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeofWaitlist"
        android:layout_width="60dp"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/Here"
        android:layout_alignBottom="@+id/Here"
        android:layout_alignParentStart="false"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-3dp"
        android:ems="3"
        android:textColor="@color/color1" />

    <TextView
        android:id="@+id/sizeofWaitparty"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/Here"
        android:layout_alignBottom="@+id/Here"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/nameofWaitparty"
        android:ems="2"
        android:textColor="@color/color1" />

    <CheckBox
        android:id="@+id/Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="-2dp"
        android:buttonTint="@color/color1"
        android:focusable="false"
        android:text="@string/waitlist_text"
        android:textColor="@color/color1" />


</RelativeLayout>