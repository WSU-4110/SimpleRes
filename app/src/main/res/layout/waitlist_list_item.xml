<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/nameOfWaitParty"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/SendText"
        android:layout_alignBottom="@id/SendText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/timeofWaitlist"
        android:layout_toRightOf="@id/timeofWaitlist"
        android:textColor="@color/color1"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/timeofWaitlist"
        android:layout_width="60dp"
        android:layout_height="29dp"
        android:layout_alignBaseline="@id/SendText"
        android:layout_alignBottom="@id/SendText"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="-1dp"
        android:ems="3"
        android:textColor="@color/color1" />

    <TextView
        android:id="@+id/sizeOfWaitParty"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignBaseline="@id/SendText"
        android:layout_alignBottom="@id/SendText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/nameOfWaitParty"
        android:ems="2"
        android:textColor="@color/color1" />

    <CheckBox
        android:id="@+id/SendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="-2dp"
        android:buttonTint="@color/color1"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/waitlist_text"
        android:textColor="@color/color1"
        tools:ignore="RelativeOverlap,RtlHardcoded" />


</RelativeLayout>